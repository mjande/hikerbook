<h2 class="title">Login</h2>

<div class="box">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class='control'>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <div class='control'>
        <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
      </div>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />  
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'checkbox' %>
      </div>
    <% end %>

    <div class="actions is-flex is-align-items-center mb-3">
      <%= f.submit "Log in", class: 'button' %>
    
  <% end %>

      <p class='mx-4'>or</p> 
      <%= button_to "Login with Facebook", user_facebook_omniauth_authorize_path, method: :post, data: { turbo: false }, class: 'button is-success' %>
    </div>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="is-inline pr-2">Don't have an account?</div>  
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  <% end %>
  <div class="is-flex is-flex-direction-column is-align-items-center">
    <div class="mt-4"><b>Just visiting? Use these credentials to quickly see what you're missing!</b></div>
    <div>Email: user@example.com </div>
    <div>Password: password</div>
  </div>
</div>
