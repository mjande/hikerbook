<div class="box">  
  <div class="media is-flex is-align-items-center">
    <div class="media-left">
      <figure class='image is-48x48'>
        <img class='is-rounded'src='https://picsum.photos/48/48'>
      </figure>
    </div>

    <div class="media-content">
      <strong><%= user.username %></strong>
    </div>

    <div class="media-right">
      <% if current_user.friends.include?(user) %>

      <% elsif current_user.sent_request?(user) %>
        <div>Friend Request Sent!</div>
      <% elsif current_user.received_request?(user) %>

      <% else %>
        <%= form_with model: FriendRequest.new, id: dom_id(user) do |f| %>
          <%= f.hidden_field :sender_id, value: current_user.id%>
          <%= f.hidden_field :receiver_id, value: user.id %>
          <%= f.submit "Send Friend Request" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>