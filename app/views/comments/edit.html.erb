<div class="title">Edit Comment</div>

<%= turbo_frame_tag @comment.to_dom_id, class: 'media px-3' do %>
  <div class="media-left">
    <figure class='image is-48x48'>
      <%= image_tag @comment.user.avatar_pic, class: 'is-rounded' %>
    </figure>
  </div>

  <div class="media-content">
    <strong><%= @comment.user.username %></strong>
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
<% end %>

<%= render partial: @comment.post, locals: { user: current_user, comments: @comments } %>