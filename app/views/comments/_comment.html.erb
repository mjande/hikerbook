<%= turbo_frame_tag dom_id(comment), class: 'media px-3' do %>
  <div class="media-left">
    <figure class='image is-48x48'>
      <img class='is-rounded'src='https://picsum.photos/48/48'>
    </figure>
  </div>

  <div class="media-content">
    <strong><%= comment.user.username %></strong>
    <div><%= comment.body %></div>
  </div>

  <div class="media-right">
    <div><%= link_to 'Edit', edit_post_comment_path(post, comment)%></div>
    <div><%= button_to 'Delete', post_comment_path(post, comment), method: :delete, class: 'remove-btn-style' %></div>
  </div>
<% end %>