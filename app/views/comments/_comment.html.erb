
<div class="media px-3">
  <div class="media-left">
    <figure class='image is-48x48'>
      <img class='is-rounded'src='https://picsum.photos/48/48'>
    </figure>
  </div>

  <div class="media-content">
    <%= turbo_frame_tag "#{dom_id(comment.post)}_#{dom_id(comment)}" do %>
    
      <strong><%= comment.user.username %></strong>
      <div><%= comment.body %></div>
    <% end %>
  </div>

  <div class="media-right">
    <div><%= link_to 'Edit', edit_post_comment_path(comment.post, comment), data: { turbo_frame: "#{dom_id(comment.post)}_#{dom_id(comment)}" }%></div>
    <div><%= button_to 'Delete', post_comment_path(comment.post, comment), method: :delete, class: 'remove-btn-style' %></div>
  </div>
</div>
